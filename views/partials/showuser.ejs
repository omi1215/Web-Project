    <form action="/admin/showuser" id="showuserform">
    <div class="card " style="width:100% ;">
        <div class="card-header ">
            <h4 class="card-title text-center ">Show Users</h4>
        </div>
        <div style="padding-left: 1rem;">
            <div class="card-body ">
                <div class="mb-3 d-flex justify-content-evenly ">
                    <label for="searchname" class="form-label" id="searchfname" style="margin-right: 0.25rem;">Search First Name</label>
                    <input type="text" name="searchname" class="form-control col-3 " id="searchname" style="margin-right: 1.25rem;">
                    <label for="searchemail" class="form-label" id="searchlname" style="margin-right: 0.25rem;">Search Email</label>
                    <input type="email" name="searchemail" class="form-control col-3 " id="searchemail" placeholder="example@gmail.com" style="margin-right: 1.25rem;">
                </div>
                <div class="d-flex justify-content-center align-items-center ">
                    <button class="btn btn-outline-dark col-5" type="submit">Filter</button>
                </div>
                <div class="displaydata">
                    <% users.forEach((users,index)=> { %>
                    <div class="user" id="userdatadisplay">
                        <p><b>First Name:</b> <%= users.firstname %></p>
                        <p><b>Middle Name:</b> <%= users.middlename %></p>
                        <p><b>Last Name:</b> <%= users.lastname %></p>
                        <p><b>Email:</b> <%= users.email %></p>
                        <p><b>Status:</b> <%= users.status %></p>
                    </div>
                    <hr class="my-4 ">
                    <% }); %>
                </div>
                <div class="pagination">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (currentPage === i) { %>
                            <span class="current-page"><%= i %></span>
                        <% } else { %>
                            <a href="/admin/showuser?page=<%= i %>" class="page-link" style="text-decoration: none;border:0px;color: inherit; "><%= i %></a>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</form>