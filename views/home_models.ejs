<%- include('./partials/header.ejs')  %>

<body>
    <script src="/js/bootstrap.min.js"></script>
    <div class="container">
        <div class="Models d-flex justify-content-center pt-lg-5">
            <div class="Models_heading">
                <h1 style="font-weight: bold;">Models</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <% cars.forEach((car,index) => { %>
            <div class="col-xl-6 col-lg-12">
                <div class="model_cards card shadow-lg  " style="width: 32rem;height: 45rem;">
                    <img src="<%= car.image %>" class="card-img" alt="image not loaded">
                    <div class="card-body card-img-overlay d-flex flex-column   ">
                        <div class="card-img-top  carname"><%= car.name %></div>
                        <div class="card-img-bottom  text-white cardesc">
                            <div class="desctxt"><%= car.description %></div>
                            <div class="carprice">
                                From $ <%= car.price %>*
                            </div>
                            <div class="row buttons">
                                <div class="col-6 col-xl-12 col-xxl-12 mb-2 ">
                                    <div class="btn btn-light btn-block buildbtn text-center">Build your <%= car.name %></div>
    
                                </div>
                                <div class="col-6 col-xl-12 col-xxl-12 mt-xl-1 mb-2 ">
                                    <div class="btn transparent-btn btn-block allmodelbtn text-center ">All <%= car.name%> models</div>
    
                                </div>
                        </div>
                        
                        </div>

                    </div>

                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>

</html>