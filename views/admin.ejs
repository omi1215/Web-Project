<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/admin.css">
    <script src="/js/admin.js"></script>
</head>

<body>
    <%- include('./partials/header.ejs') %>
    <div class="container-fluid mainbox">
        <div class="options">
            <div class="card" style="width: 100%;">
                <div class="card-header ">
                    <h3 class="card-title ">Admin Dashboard</h3>
                </div>
                <div class="card-body ">
                    <h6 class="card-subtitle " id="showerror"></h6>
                    <div class="d-grid gap-2 col-12 ">
                        <button class="btn btn-outline-dark " type="button" id="cuser">Create User</button>
                        <button class="btn btn-outline-dark" type="button" id="updateUserBtn" onclick="redirectTo('/admin/updateuser')">Update User</button>
                        <button class="btn btn-outline-dark" type="button" id="showUserBtn" onclick="redirectTo('/admin/showuser')">Show Users</button>
                        <button class="btn btn-outline-dark" type="button" id="delUserBtn" onclick="redirectTo('/admin/deleteuser')">Delete User</button>
                        <button class="btn btn-outline-dark" type="button" onclick="redirectTo('/admin/createcar')" >Create Car</button>
                        <button class="btn btn-outline-dark" type="button" onclick="redirectTo('/admin/updatecar')">Update Car</button>
                        <button class="btn btn-outline-dark" type="button" onclick="redirectTo('/admin/showcars')">Show Cars</button>
                        <button class="btn btn-outline-dark" type="button" onclick="redirectTo('/admin/deletecar')">Delete Car</button>
                    </div>
                    <hr class="my-4 ">
                    <div class="container-fluid ">
                        <h4 class="card-title text-center ">Total Sales</h4>
                        <hr class="my-4 ">
                        <div class="container-fluid  d-flex justify-content-between ">
                            <h5>Revenue</h5>
                            <h6 class="ammount">$<%= totalAmount %></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="edit" id="editContent">
            <% if (template === 'showuser') { %>
                <%- include('./partials/showuser.ejs') %>
            <% } else if (template === 'updateuser') { %>
                <%- include('./partials/updateuser.ejs') %>
            <% } else if (template === 'deleteuser') { %>
                <%- include('./partials/deluser.ejs') %>
            <% } else if (template === 'createcar') { %>
                <%- include('./partials/createcar.ejs') %> 
                <% } else if (template === 'updatecar') { %>
                    <%- include('./partials/updatecar.ejs') %> 
                    <% } else if (template === 'showcars') { %>
                        <%- include('./partials/showcars.ejs') %> 
                        <% } else if (template === 'deletecar') { %>
                            <%- include('./partials/delcar.ejs') %> 
            <% } else { %>
                <center><h3>Edit Page</h3></center>
                
            <% } %>



        </div>
        
            <div class="showmessage" id="showmessage" style="color: red;"></div>
            
    <script>
         function redirectTo(route) {
            window.location.href = route;
        }
    </script>
    
    
</body>

</html>
